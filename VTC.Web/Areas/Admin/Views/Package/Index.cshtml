@model List<PackageVM>
@{
    ViewData["Title"] = "Index";
}

<h1>Packages</h1>
<a asp-action="AddEdit" class="btn btn-success modal-open">Add</a>
@if (Model.Any())
{
    <table class="table table-striped">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <a asp-action="AddEdit" asp-route-id="@item.Id" class="modal-open">Edit</a>
                </td>
                <td> <a href="#">Delete</a></td>
                <td><a asp-action="AddEdit" asp-controller="Level" asp-route-packageId="@item.Id" class="modal-open">Add level</a></td>


            </tr>
        }
    </table>
}

else
{
    <h2>No data found</h2>
}